<div class="mb-2 rounded-lg bg-gray-900 px-6 pt-2 shadow-md">
  <form action="/{{post.id_post}}/createComment" method="post">
    <input type="hidden" name="post_id" value="{{post.id_post}}" />
    <div class="flex items-start">
      <span class="mr-2 mt-2">{{> partials/sessionAvatar}}</span>
      <textarea
        name="comment_text"
        class="w-full resize-none overflow-hidden rounded-lg bg-gray-700 p-2 text-white focus:outline-none"
        oninput="this.style.height = ''; this.style.height = this.scrollHeight + 'px'; checkMaxLength(this);"
        maxlength="255"
      ></textarea>
    </div>
    <div id="maxLengthMessage" class="text-red-500 hidden">
      Max comment length reached: 255
    </div>
    <div class="flex justify-end">
      <button type="submit" class="my-2 rounded-lg bg-blue-500 p-2 text-white">
        Respond
      </button>
    </div>
  </form>
</div>

<script>
  function checkMaxLength(textarea) {
    const maxLengthMessage = document.getElementById('maxLengthMessage');
    if (textarea.value.length >= 255) {
      maxLengthMessage.classList.remove('hidden');
    } else {
      maxLengthMessage.classList.add('hidden');
    }
  }
</script>