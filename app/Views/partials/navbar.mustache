<div
  class="fixed left-0 right-0 top-0 z-20 flex items-center justify-between bg-gray-800 p-4 border-b-2 border-gray-700"
>
  <div class="w-1/3"></div>
  <a href="/" class="text-4xl font-bold tracking-widest"
    ><span class="text-blue-500">S</span><span class="text-red-500">K</span><span class="text-yellow-500">I</span><span class="text-green-500">B</span><span class="text-blue-500">I</span><span class="text-red-500">D</span><span class="text-yellow-500">I</span><span class="text-green-500">T</span><span class="text-blue-500">T</span><span class="text-red-500">E</span><span class="text-yellow-500">R</span></a
  >
  {{!-- User Profile and Logout --}} {{#session_user}}
  <div class="flex w-1/3 justify-end" id="dashboard_loggedin">
    {{!-- Logout Button --}}
    <form action="/logout" method="POST" class="ml-4 flex h-2 justify-end">
      <button
        type="submit"
        class="h-12 rounded-md bg-blue-500 px-4 py-2 text-white"
      >
        Logout
      </button>
    </form>
    {{!-- User Profile --}}
    <div class="ml-10">{{> partials/sessionAvatar}}</div>
  </div>
  {{/session_user}} {{^session_user}}
  <div class="flex h-10 w-1/3 justify-end" id="dashboard_loggedout">
    <a href="/login" class="flex justify-end">
      <button class="h-10 rounded-md bg-blue-500 px-4 py-2 text-white">
        Login
      </button>
    </a>
    <a href="/register" class="ml-4 flex justify-end">
      <button class="h-10 rounded-md bg-blue-500 px-4 py-2 text-white">
        Register
      </button>
    </a>
  </div>
  {{/session_user}}
</div>

