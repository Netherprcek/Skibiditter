<title>Login</title>
    {{> partials/header}}

    <div class="flex min-h-screen items-center justify-center">
      <form
        class="w-80 rounded-lg bg-gray-800 p-4"
        id="login_form"
        action="/login"
        method="post"
      >
        <h1 class="mb-2 text-center text-2xl font-bold">Login</h1>
        <input
          type="text"
          name="username"
          id="login_username"
          class="mb-3 w-full rounded-md bg-gray-700 p-2"
          placeholder="Username"
        />

        <input
          type="password"
          name="password"
          id="login_password"
          class="mb-4 w-full rounded-md bg-gray-700 p-2"
          placeholder="Password"
        />
        <p id="login_error" class="mb-2 mt-2 text-center text-sm text-red-600">
          &nbsp; {{error}}
        </p>

        <input type="hidden" id="loginErrorField" value="{{error}}" />
        <div id="loginError"></div>

        <div class="flex justify-center">
          <button class="flex w-auto rounded-md bg-blue-500 p-2 text-center">
            Login
          </button>
        </div>
      </form>
    </div>

    <script src="/js/auth.js"></script>
  </body>
</html>
