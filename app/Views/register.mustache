<title>Register</title>
{{> partials/header}} text-green-500 text-red-500
<div class="flex min-h-screen items-center justify-center">
  <div
    id="notification"
    class="fixed left-1/2 top-40 z-50 hidden -translate-x-1/2 transform rounded border-l-4 border-yellow-500 bg-yellow-100 p-4 text-yellow-700 opacity-0 shadow-md transition-opacity duration-300"
    role="alert"
  >
    <p id="notification-message"></p>
  </div>

  <form
    action="/register"
    method="post"
    id="register_form"
    class="w-96 rounded-lg bg-gray-800 p-4"
  >
    <h1 class="mb-2 text-center text-2xl font-bold">Register</h1>
    <input
      type="text"
      name="username"
      id="username"
      class="mb-3 w-full rounded-md bg-gray-700 p-2"
      placeholder="Username"
    />

    <input
      type="password"
      name="password"
      id="password"
      class="mb-3 w-full rounded-md bg-gray-700 p-2"
      placeholder="Password"
    />
    <input
      type="password"
      name="confirm_password"
      id="confirm_password"
      class="mb-4 w-full rounded-md bg-gray-700 p-2"
      placeholder="Confirm Password"
    />
    {{#showNotification}}
    <input type="hidden" id="server-notification" value="{{error}}" />
    {{/showNotification}}
    <div class="mb-4 flex justify-center">
      <button class="w-auto rounded-md bg-blue-500 p-2">Register</button>
    </div>

    <div class="flex flex-wrap text-sm">
      <p class="mb-1">Password requirements:</p>
      <ul class="list-disc pl-5">
        <li id="username_length" class="">
          Username must be at least 3 characters long
        </li>
        <li id="password_length" class="">
          Password must be longer than 6 characters
        </li>
        <li id="password_uppercase" class="">
          Password must contain at least one uppercase letter
        </li>
      </ul>
    </div>
  </form>
</div>

<script src="/js/register.js"></script>
