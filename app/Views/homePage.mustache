<title>Skibiditter - Home</title>
{{> partials/header}}
<div class="flex min-h-screen flex-col">
  {{> partials/navbar}}
  <div class="flex flex-1 pt-16">
    {{> partials/leftBar}}
    <div id="center_column" class="flex w-1/3 justify-center overflow-y-auto">
      <div class="w-full max-w-2xl">
        <h1 class="mb-6 mt-6 text-center text-3xl font-bold text-white">
          {{pageTitle}}
        </h1>

        {{#session_user}} {{> partials/postForm}} {{> partials/postList}}
        {{/session_user}} {{^session_user}}
        <h2
          class="mb-6 mt-16 rounded-lg bg-gray-800 p-4 text-center text-xl font-bold text-white"
        >
          <a href="/login" class="text-blue-500">Login</a> to interact with the
          community.
        </h2>
        <h2
          class="mb-6 mt-16 rounded-lg bg-gray-800 p-4 text-center text-xl font-bold text-white"
        >
          In the meantime, feel free to visit the
          <a href="/explore" class="text-blue-500">explore page</a> to see
          what's happening ðŸ˜Š
        </h2>
        {{/session_user}} {{#session_user}}
        <h2 class="mb-6 text-center text-xl font-bold text-white">
          Page {{currentPage}}
        </h2>
        {{/session_user}}

        <!-- Pagination Links -->
        <div class="mt-6 flex justify-center">
          {{#previousPage}}
          <a
            href="?page={{previousPage}}"
            class="btn btn-primary mr-2 rounded bg-blue-500 px-4 py-2 font-bold text-white hover:bg-blue-700"
            >Previous</a
          >
          {{/previousPage}} {{#nextPage}}
          <a
            href="?page={{nextPage}}"
            class="btn btn-primary rounded bg-blue-500 px-4 py-2 font-bold text-white hover:bg-blue-700"
            >Next</a
          >
          {{/nextPage}}
        </div>
      </div>
    </div>
    {{> partials/rightBar}}
  </div>
</div>
